%p#notice= notice

%p
  .provider
    %h2 #{@provider.name}
    %h4= "#{@provider.addresses[0].locality}, #{@provider.addresses[0].post_code}"
    %h4= "#{@provider.rolodexes[0].kind}: #{@provider.rolodexes[0].number_or_email}"

%p
  %b Web Site:
  = link_to @provider.name, @provider.url
%p
  %b Description:
  = @provider.description

%p
  %b Additional Activities:
  = @provider.additional_activities ? "YES" : "No"
  - if @provider.additional_activities
    = @provider.additional_activities_list

%p
  %b Age Range:
  = @provider.age_range

%p
  %b Air Conditioning:
  = @provider.air_conditioning ? "YES" : 'No'

%p
  %b Approved Places:
  = @provider.approved_places

%p
  %b Bus Service:
  = @provider.bus_service ? "YES" : 'No'

%p
  %b Type of Care Offered:
  = @provider.care_offered 

%P
  %b Cloth Nappies:
  = @provider.cloth_nappies ? "YES" : 'No'

%p
  %b Disposable Nappies:
  = @provider.disposable_nappies ? "YES" : 'No'

%p
  %b Disposable Excursions:
  = @provider.excursions ? "YES" : 'No'

%p
  %b Extended Hours for Kindys:
  = @provider.extended_hours_for_kindys ? "YES" : 'No'

%p
  %b Fee ($):
  = @provider.fee

%p
  %b Food Provided
  = @provider.food_provided ? "YES" : 'No'

%p
  %b Form of Care:
  = @provider.form_of_care

%p
  %b Guest Speakers:
  = @provider.guest_speakers ? "YES" : 'No'

%p
  %b Hours of Operation:
  = @provider.hours

%p
  %b Languages:
  = @provider.languages ? "YES" : "No"
  - if @provider.languages
    = @provider.languages_list

%p
  %b NQS Rating:
  = @provider.NQS_rating

%p
  %b Online Enrollment: 
  = @provider.online_enrollment

%p
  %b Outdoor Play Area:
  = @provider.outdoor_play_area ? "YES" : 'No'

%p
  %b Legal Name:
  = @provider.provider_legal_name

%p
  %b Secure Access:
  = @provider.security_access ? "YES" : 'No'

%p
  %b Siblings Get Priority:
  = @provider.sibling_priority ? "YES" : 'No'

%p
  %b Real Grass in Play Area:
  = @provider.real_grass ? "YES" : 'No'

%p
  %b Technology:
  = @provider.technology ? "YES" : 'No'
  - if @provider.technology
    = @provider.technology_list

%p
  %b Vancancies:
  = @provider.vacancies ? "YES" : 'No'

%p
  %b Compulsory Vaccinactions
  = @provider.vaccinations_compulsory ? "YES" : 'No'

%p
  %b Waitlist Fee ($):
  = @provider.waitlist_fee

%p
  %b Waitlist Online Form:
  = @provider.waitlist_online ? "YES" : 'No'

%p
  %b Waitlist Reimbursed:
  = @provider.waitlist_reimbursed ? "YES" : 'No'

%p
  %b Date last updated:
  = @provider.updated_at.strftime("%d-%m-%Y")

